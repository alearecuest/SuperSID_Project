# ============================================
# SuperSID Pro Analytics - Environment Config
# ============================================
# Copy this file to .env.development or .env.production
# and update values for your environment

# ============================================
# Environment
# ============================================
NODE_ENV=development
LOG_LEVEL=debug

# ============================================
# Server Configuration
# ============================================
BACKEND_PORT=3001
FRONTEND_PORT=3000

# ============================================
# Database
# ============================================
DATABASE_PATH=./data/supersid.db

# ============================================
# API Configuration
# ============================================
API_TIMEOUT=5000
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_CREDENTIALS=true

# ============================================
# External APIs
# ============================================
SPACE_WEATHER_API=https://api.spaceweatherlive.com/v1
SOLAR_CENTER_API=https://sid-ftp.stanford.edu

# ============================================
# Stanford Solar Center
# ============================================
# SFTP Configuration for uploading data
SOLAR_CENTER_FTP_SERVER=sid-ftp.stanford.edu
SOLAR_CENTER_FTP_PORT=22
SOLAR_CENTER_FTP_DIRECTORY=/incoming/SuperSID/NEW/

# ============================================
# Security (Production Only)
# ============================================
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
API_KEY_HEADER=X-API-Key
JWT_EXPIRY=24h

# ============================================
# Monitoring & Logging (Production)
# ============================================
SENTRY_DSN=
LOG_FILE=./logs/supersid.log
ENABLE_ERROR_TRACKING=false

# ============================================
# Performance
# ============================================
CLUSTER_ENABLED=false
MAX_WORKERS=4
NODE_MAX_OLD_SPACE_SIZE=1024

# ============================================
# Feature Flags
# ============================================
ENABLE_REAL_TIME_UPDATES=false
ENABLE_ANALYTICS=false
ENABLE_NOTIFICATIONS=false

# ============================================
# Defaults - Observatory Configuration
# ============================================
DEFAULT_FREQUENCY=24000
DEFAULT_ANTENNA_TYPE=Long Wire
DEFAULT_ALTITUDE=0