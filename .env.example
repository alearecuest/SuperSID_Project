# Application Configuration
NODE_ENV=development
PORT=3001
ELECTRON_ENV=development

# Database Configuration
DB_PATH=./data/supersid.db
DB_TYPE=sqlite

# API Configuration
API_URL=http://localhost:3001
API_PORT=3001

# Audio Configuration
AUDIO_SAMPLE_RATE=96000
AUDIO_CHANNELS=1
AUDIO_BUFFER_SIZE=4096
AUDIO_BIT_DEPTH=24

# VLF Transmitter Frequencies (Hz)
VLF_FREQUENCIES=24000,25200,19800,22100,23400

# Station Configuration
STATION_ID=281
STATION_NAME=Observatory Station #281
STATION_LATITUDE=0.0
STATION_LONGITUDE=0.0
STATION_ALTITUDE=0.0

# SID Detection Parameters
SID_DETECTION_THRESHOLD=0.15
SID_MIN_DURATION=60
SID_MAX_DURATION=3600

# Data Storage
DATA_STORAGE_PATH=./data/observations
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Feature Flags
ENABLE_AR=true
ENABLE_REALTIME_SYNC=true
ENABLE_MULTI_STATION=true
ENABLE_PREDICTIVE_ANALYTICS=true

# External APIs
STANFORD_API_URL=https://solar-center.stanford.edu/SID/api
NOAA_SPACE_WEATHER_API=https://api.weather.gov/alerts/active

# Performance
MAX_WORKERS=4
MEMORY_LIMIT=2048