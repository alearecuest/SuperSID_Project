{
  "appId": "com.supersid.proanalytics",
  "productName": "SuperSID Pro Analytics",
  "directories": {
    "output": "build",
    "buildResources": "public"
  },
  "files": [
    "dist/**/*",
    "node_modules/**/*",
    "public/**/*",
    "package.json"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      {
        "target": "portable",
        "arch": [
          "x64"
        ]
      }
    ],
    "certificateFile": null,
    "certificatePassword": null,
    "signingHashAlgorithms": [
      "sha256"
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "SuperSID Pro Analytics"
  },
  "mac": {
    "target": [
      "dmg",
      "zip"
    ],
    "category": "public.app-category.utilities"
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ],
    "category": "Utility"
  }
}