{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist/backend",
    "rootDir": "./src/backend",
    "baseUrl": "."
  },
  "include": ["src/backend/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}